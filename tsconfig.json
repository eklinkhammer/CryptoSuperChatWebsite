{
  "compilerOptions": {
    "module": "esnext", // Use ES Modules
    "target": "es6", // Optional, controls supported language features
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
